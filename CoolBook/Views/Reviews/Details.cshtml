@model CoolBook.Models.Review

@{
    ViewData["Title"] = "Details";
}

@section Styles {
    <link href="@Url.Content("~/css/Reviews/Details.css")" rel="stylesheet" type="text/css" />
}

@{
    string username = Model.User.UserInfo != null ? Model.User.UserInfo.FullName : Model.User.UserName;
}

<h1>Details</h1>

<div class="cb-review-container">
    <h4>Review</h4>
    <hr />
    <div class="toast cb-review show">
        <div class="toast-header">
            <i class="bi bi-person-circle me-2"></i>
            <strong class="me-auto">
                <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId">
                    @username
                </a>
                &nbsp;-&nbsp;
                <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.BookId">
                    @Model.Book.Name
                </a>
            </strong>
            <small class="text-muted">@Model.Date.ToShortDateString()</small>
        </div>
        <div class="toast-body">
            <h4>
                <a asp-action="Details" asp-route-id="@Model.Id">
                    @Model.Title
                </a>
                <input class="cb-rating"
                       type="range"
                       min="0"
                       max="5"
                       step="0.1"
                       disabled
                       value="@Model.Rate">
            </h4>
            @Model.Body
        </div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>

</div>