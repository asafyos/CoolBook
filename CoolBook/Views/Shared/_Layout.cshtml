<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoolBook</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>

@{var colored = true; }@*(bool)(ViewData["colored"] ?? false);}*@
@{var textColor = colored ? "text-light" : "text-dark";}

<body>
    <header class="navbar navbar-expand-sm sticky-top navbar-dark @(colored?"cb-colored-nav":"bg-white border-bottom box-shadow")">

        <div class="container-fluid">
            <a class="navbar-brand @textColor" asp-controller="Home" asp-action="Index">
                <img class="cb-logo d-block d-md-block d-sm-none" src="~/book.png" />
                CoolBook
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @textColor" asp-controller="Home" asp-action="Index">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @textColor" asp-controller="Books" asp-action="Search">
                            Books
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @textColor" asp-controller="Categories" asp-action="Search">
                            Categories
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @textColor" asp-controller="Authors" asp-action="Index">
                            Authors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @textColor" asp-controller="Reviews" asp-action="Index">
                            Reviews
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @textColor" asp-controller="Manager" asp-action="Index">
                            Manage
                        </a>
                    </li>
                    <li class="nav-item cb-last-link">
                        <a class="nav-link @textColor" asp-controller="Home" asp-action="About">
                            About us
                        </a>
                    </li>
                    @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                    {
                        <li class="nav-item">
                            <h6>Hello, @Context.User.Identity.Name</h6>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @textColor" asp-controller="Users" asp-action="Profile">
                                <i class="bi bi-person-circle"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @textColor" asp-controller="Users" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @textColor" asp-controller="Users" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CoolBook - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
